@{
    int count = 1;
}
@model List<Crud>

<div class="card-body">
    
    <div class="table-responsive">
        <table class="table">
            <div class="d-flex justify-content-end mr-2 mb-3">
        <a class="btn btn-success" asp-action="Create">Create Client</a>
             </div>
            <thead>
                <tr>
                    <th>Id</th>
                
                    <th>Title</th>
                
                    <th>Description</th>
                
                    <th>Icon</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                <tr>
                    <td>
                        @(count++)
                    </td>
                
                    <td>
                        @item.Title
                    </td>

                    <td>
                        @item.Description
                    </td>

                    <td>
                        @item.Icon
                    </td> 
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm edit-crud">
                                <i class="mdi mdi-auto-fix"></i>
                        </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm Delete-crud">
                                <i class="mdi mdi-delete-variant"></i>
                            </a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>